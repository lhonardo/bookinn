<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Document</th>
      <th>Documentcontent</th>
      <th>Email</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Address</th>
      <th>Postalcode</th>
      <th>Phone</th>
      <th>Dayofbirth</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.document %></td>
        <td><%= person.documentcontent %></td>
        <td><%= person.email %></td>
        <td><%= person.country %></td>
        <td><%= person.state %></td>
        <td><%= person.city %></td>
        <td><%= person.address %></td>
        <td><%= person.postalcode %></td>
        <td><%= person.phone %></td>
        <td><%= person.dayofbirth %></td>
        <td><%= person.note %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

