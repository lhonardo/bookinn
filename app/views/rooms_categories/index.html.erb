<p id="notice"><%= notice %></p>

<h1>Listing Rooms Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms_categories.each do |rooms_category| %>
      <tr>
        <td><%= rooms_category.name %></td>
        <td><%= link_to 'Show', rooms_category %></td>
        <td><%= link_to 'Edit', edit_rooms_category_path(rooms_category) %></td>
        <td><%= link_to 'Destroy', rooms_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

